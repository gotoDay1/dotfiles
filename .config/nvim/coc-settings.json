{
    "suggest.noselect": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "suggest.autoTrigger": "always",
    "languageserver": {
        "fortran" : {
            "command": "fortls",
            "filetypes": ["fortran", "f90", "f"],
            "rootPatterns": [".fortls", ".git/"]
        },
        "jedi": {
            "enable": true,
            "command": "~/.venv/coc/bin/jedi-language-server",
            "filetypes": ["python"], 
            "rootPatterns": [".git/"]
        },
        "texlab": {
            "command": "texlab",
            "filetypes": ["tex", "bib"],
            "rootPatterns": ["*.tex"]
        }
    },
    "snippets.ultisnips.pythonPrompt": false
}

